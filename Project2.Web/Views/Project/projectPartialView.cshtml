@model List<Project2.Web.Models.ProjectViewModel>

<thead>
    <tr>
        <th>#</th>
        <th>Tên đồ án</th>
        <th>Danh mục ngôn ngữ</th>
        <th>Danh mục yêu cầu</th>
        <th>Sinh viên đăng ký</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
    @{
        int index = 0;
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td style="color: red" colspan="6" align="center">Dữ liệu trống...</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@index</td>
            <td>@item.name</td>
            <td>@item.Tags</td>
            <td>
                @item.require
            </td>
            <td>@item.studentName</td>
            <td>
                <a href="#" class="btn btn-danger btn-sm" onclick="removeProject(@item.id)"><i class="fas fa-trash-alt"></i></a>
                <a href="#" class="btn btn-info btn-sm" data-target="#modifyProject" data-toggle="modal"><i class="fas fa-pen"></i></a>
                <a href="#" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
            </td>
        </tr>
    }
</tbody>